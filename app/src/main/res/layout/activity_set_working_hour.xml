<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#e8e8e8"

    android:orientation="vertical">


    <include
        android:id="@+id/headar_area"
        layout="@layout/design_toolbar_general" />
    <ScrollView
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_above="@id/btn_type2"
        android:id="@+id/scroll"
        android:layout_below="@id/headar_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/containerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.view.MTextView
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            tools:text="Monday to friday (Slot 1)"
            android:id="@+id/monfriSlotOneTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:gravity="start|center_vertical"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/_17ssp"
            app:customTypeFace="@string/systemSemiBold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:elevation="0dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/slotMonCalenderArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                  android:padding="@dimen/_8sdp"
                    >

                    <com.view.MTextView
                        android:id="@+id/fromtimeSlotMonVTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="start|center_vertical"
                        android:text="00:00"
                        android:textColor="#242424"
                        android:textSize="@dimen/_15ssp"
                        app:customTypeFace="@string/systemMediumFont" />


                    <ImageView
                        android:layout_gravity="end|center_vertical"
                        android:tint="@color/appThemeColor_1"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        app:srcCompat="@drawable/ic_calendar_timeslot" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:elevation="0dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/slotFriCalenderArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:padding="@dimen/_8sdp">

                    <com.view.MTextView
                        android:id="@+id/totimeSlotFriVTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="start|center_vertical"
                        android:text="00:00"
                        android:textColor="#242424"
                        android:textSize="@dimen/_15ssp"
                        app:customTypeFace="@string/systemMediumFont" />


                    <ImageView
                        android:layout_gravity="end|center_vertical"
                        android:tint="@color/appThemeColor_1"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        app:srcCompat="@drawable/ic_calendar_timeslot" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <com.view.MTextView
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            tools:text="Slot"
            android:id="@+id/monfriSlotTwoTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:gravity="start|center_vertical"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/_17ssp"
            app:customTypeFace="@string/systemSemiBold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:elevation="0dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/slotTwoMonCalenderArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                  android:padding="@dimen/_8sdp">

                    <com.view.MTextView
                        android:id="@+id/fromtimeSlotTwoMonVTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_weight="1"
                        android:layout_gravity="start|center_vertical"
                        android:text="00:00"
                        android:textColor="#242424"
                        android:textSize="@dimen/_15ssp"
                        app:customTypeFace="@string/systemMediumFont" />


                    <ImageView
                        android:layout_gravity="end|center_vertical"
                        android:tint="@color/appThemeColor_1"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        app:srcCompat="@drawable/ic_calendar_timeslot" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:elevation="0dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/slotTwoFriCalenderArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                  android:padding="@dimen/_8sdp">

                    <com.view.MTextView
                        android:id="@+id/totimeSlotTwoFriVTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_weight="1"
                        android:layout_gravity="start|center_vertical"
                        android:text="00:00"
                        android:textColor="#242424"
                        android:textSize="@dimen/_15ssp"
                        app:customTypeFace="@string/systemMediumFont" />


                    <ImageView
                        android:layout_gravity="end|center_vertical"
                        android:tint="@color/appThemeColor_1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/ic_calendar_timeslot" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <com.view.MTextView
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            tools:text="Slot"
            android:id="@+id/satSunSlotOneTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:gravity="start|center_vertical"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/_17ssp"
            app:customTypeFace="@string/systemSemiBold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:elevation="0dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/slotSatCalenderArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                  android:padding="@dimen/_8sdp">

                    <com.view.MTextView
                        android:id="@+id/fromtimeSlotSatVTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_weight="1"
                        android:layout_gravity="start|center_vertical"
                        android:text="00:00"
                        android:textColor="#242424"
                        android:textSize="@dimen/_15ssp"
                        app:customTypeFace="@string/systemMediumFont" />


                    <ImageView
                        android:layout_gravity="end|center_vertical"
                        android:tint="@color/appThemeColor_1"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        app:srcCompat="@drawable/ic_calendar_timeslot" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:elevation="0dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/slotSunCalenderArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                  android:padding="@dimen/_8sdp">

                    <com.view.MTextView
                        android:id="@+id/totimeSlotSunVTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_weight="1"
                        android:layout_gravity="start|center_vertical"
                        android:text="00:00"
                        android:textColor="#242424"
                        android:textSize="@dimen/_15ssp"
                        app:customTypeFace="@string/systemMediumFont" />


                    <ImageView
                        android:layout_gravity="end|center_vertical"
                        android:tint="@color/appThemeColor_1"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        app:srcCompat="@drawable/ic_calendar_timeslot" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <com.view.MTextView
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            tools:text="Slot"
            android:id="@+id/satSunSlotTwoTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:gravity="start|center_vertical"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/_17ssp"
            app:customTypeFace="@string/systemSemiBold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:elevation="0dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/slotTwoSatCalenderArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                  android:padding="@dimen/_8sdp">

                    <com.view.MTextView
                        android:id="@+id/fromtimeSlotTwoSatVTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_weight="1"
                        android:layout_gravity="start|center_vertical"
                        android:text="00:00"
                        android:textColor="#242424"
                        android:textSize="@dimen/_15ssp"
                        app:customTypeFace="@string/systemMediumFont" />


                    <ImageView
                        android:layout_gravity="end|center_vertical"
                        android:tint="@color/appThemeColor_1"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        app:srcCompat="@drawable/ic_calendar_timeslot" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:elevation="0dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/slotTwoSunCalenderArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                  android:padding="@dimen/_8sdp">

                    <com.view.MTextView
                        android:id="@+id/totimeSlotTwoSunVTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_weight="1"
                        android:layout_gravity="start|center_vertical"
                        android:text="00:00"
                        android:textColor="#242424"
                        android:textSize="@dimen/_15ssp"
                        app:customTypeFace="@string/systemMediumFont" />


                    <ImageView
                        android:layout_gravity="end|center_vertical"
                        android:tint="@color/appThemeColor_1"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        app:srcCompat="@drawable/ic_calendar_timeslot" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </LinearLayout>
    </ScrollView>

    <include
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:id="@+id/btn_type2"
        layout="@layout/btn_type_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_btn_height"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_weight="0" />
    <ProgressBar
        android:id="@+id/loadingBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>
